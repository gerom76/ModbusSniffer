  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Attach using Process Id",
      "type": "python",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": false
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "args": ["/dev/ttyUSB0"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Entry File",
      "type": "python",
      "request": "launch",
      "program": "modbus_sniffer.py",
      "args": ["/dev/ttyUSB0", "9600", "1", "optimized"],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
